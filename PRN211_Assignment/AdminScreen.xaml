<Window x:Class="PRN211_Assignment.AdminScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN211_Assignment"
        mc:Ignorable="d"
        Title="AdminScreen" Height="450" Width="800">
    <Grid>
        <Label Content="Admin Screen" HorizontalAlignment="Left" Margin="726,10,0,0" VerticalAlignment="Top" FontStyle="Italic" FontSize="9" Foreground="Red"/>
        <DataGrid x:Name="dtgCusRequest" Margin="89,104,73,165" ItemsSource="{Binding List}" SelectionChanged="dtgCusRequest_SelectionChanged" Background="#FFE5E5E5" IsReadOnly="True">
            <DataGrid.Columns>
                <!--<DataGridTextColumn Header="Fullname" Binding="{Binding Name}"/>-->
                <DataGridTemplateColumn >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnCreateAppointment" Content="Create" Click="Button_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Customers' Request" HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top" FontWeight="Bold" Background="White" Foreground="#FF626262" Height="36" Width="196" FontSize="20"/>
        <Button x:Name="btnShowAcceptedRequest"  HorizontalAlignment="Left" Margin="544,356,0,0" VerticalAlignment="Top" Height="52" Width="183" Click="btnShowAcceptedRequest_Click" FontStyle="Italic" Foreground="White" Background="#FF006EC9" BorderBrush="White">
            <StackPanel>
                <TextBlock Text="Show accepted request" TextWrapping="Wrap"/>
                <TextBlock Text="(Accepted appointment)" TextWrapping="Wrap"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Margin="170,358,0,0" VerticalAlignment="Top" Height="39" Width="90" Click="btnLogout_Click"/>

    </Grid>
</Window>
