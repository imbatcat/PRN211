<Window x:Class="PRN211_Assignment.AdminScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN211_Assignment"
        mc:Ignorable="d"
        Title="AdminScreen" Height="450" Width="800">
    <Grid>
        <Label Content="Admin Screen" HorizontalAlignment="Left" Margin="726,10,0,0" VerticalAlignment="Top" FontStyle="Italic" FontSize="9"/>
        <DataGrid x:Name="dtgCusRequest" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="124,104,124,165" SelectionChanged="dtgCusRequest_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fullname" Binding="{Binding Name}"/>
                <DataGridTemplateColumn Header="Create appointment">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnCreateAppointment" Content="Create" Click="Button_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Customers' Request" HorizontalAlignment="Center" Margin="0,59,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="btnShowAcceptedRequest"  HorizontalAlignment="Left" Margin="493,339,0,0" VerticalAlignment="Top" Height="52" Width="183" Click="btnShowAcceptedRequest_Click" FontStyle="Italic">
            <StackPanel>
                <TextBlock Text="Show accepted request" TextWrapping="Wrap"/>
                <TextBlock Text="(Accepted appointment)" TextWrapping="Wrap"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
