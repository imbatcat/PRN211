<Window x:Class="PRN211_Assignment.Notification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN211_Assignment"
        mc:Ignorable="d"
        Title="Notification" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Background="White" CornerRadius="5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="Save successfully!" HorizontalAlignment="Center" Margin="0 0 10 10"/>
                <Button Content="OK" Width="60" HorizontalAlignment="Center" Click="OKButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
